<Window x:Class="BatteryStatisticsUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatteryStatisticsUI"
        mc:Ignorable="d"
        Title="Battery Statistics" Height="450" Width="800">

    
    
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Margin="1,1,1,1">
            <Button x:Name="chargeCycle" Grid.Row="0" Grid.Column="0" Click="ChargeCycle" FontFamily="Impact" Width="200" Margin="4,1,1,4" BorderThickness="3,3,3,3" ClipToBounds="True" Padding="1,3,1,3">Hourly Charge Cycle</Button>
            <Button x:Name="chargingPattern" Grid.Row="0" Grid.Column="0" Click="ChargingPattern" Width="200" Margin="1,4,1,4" Padding="1,3,1,3" FontFamily="Impact" BorderThickness="3,3,3,3">Charging Pattern</Button>
            <Button x:Name="currentState" Grid.Row="0" Grid.Column="0" Click="CurrentState" Width="198" Margin="1,4,1,4" Padding="1,3,1,3" FontFamily="Impact" BorderThickness="3,3,3,3">Current State</Button>
            <Button x:Name="batteryData" Grid.Row="0" Grid.Column="0" Click="BatteryData" Width="197" Margin="1,4,1,4" Padding="1,3,1,3" FontFamily="Impact" BorderThickness="3,3,3,3">Complete Statistics</Button>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Padding="3,3,3,3" FontFamily="Times New Roman" FontStyle="Italic" Cursor="None" Margin="1,1,1,1"><Run Text="Energy parameters of battery are expressed in mWh."/><LineBreak/><Run Text="Power parameter of battery is expressed in mW."/><LineBreak/><Run Text="Battery state is recorded every 15 seconds."/><LineBreak/><Run Text="All 'capacities' are energy parameters."/><LineBreak/><Run Text="Charge rate is a power parameter."/><LineBreak/><Run Text="Charge rate will be positive when charging and negative while discharging."/><LineBreak/><Run Text="DCFC_difference is difference between Design Capacity and Full Charge Capacity."/><LineBreak/><Run Text="Hour is displayed in 24 hour format unless AM or PM is indicated."/><LineBreak/><Run Text="Spot Count - when charging is stopped before reaching 100%."/><LineBreak/><Run Text="Optimal Count - when battery is idle continuously for less than or equal to 30 minutes."/><LineBreak/><Run Text="Bad Count - when battery is idle continuously greater than 30 minutes."/></TextBlock>

        </StackPanel>

        <DataGrid x:Name="datagridGeneral"  Grid.Row="1" Grid.Column="0" IsEnabled="False" Margin="1,1,1,1" SelectionChanged="datagridGeneral_SelectionChanged" FontFamily="Times New Roman" BorderThickness="0,0,0,0" Padding="2,22,2,2" AlternatingRowBackground="LightBlue" AlternationCount="2"/>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="1,1,1,1">
            <TextBlock x:Name="textTitle" FontFamily="Rockwell Extra Bold" FontWeight="Bold" TextDecorations="Underline" FontSize="14" Margin="1,0,0,0"/>
            <TextBlock x:Name="textGeneral" Margin="2,0,0,0" FontFamily="Bahnschrift SemiBold SemiCondensed"/>
        </StackPanel>

    </Grid>
</Window>
